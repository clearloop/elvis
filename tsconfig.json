{
  "indent": [true, "spaces", 2],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "web/pkg/calling",
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "web/ts/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
